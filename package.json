{
  "name": "ra-currency-converter",
  "version": "1.0.0",
  "description": "A currency converter library for NodeJs application",
  "main": "lib/app.js",
  "types": "lib/app.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/riccardoandronaco/currency-converter.git"
  },
  "scripts": {
    "test": "mocha --no-timeout --exit -r ts-node/register src/**/*.spec.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node ./dist/app.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "currency",
    "converter"
  ],
  "author": "Andronaco Riccardo Vincenzo",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "moment": "^2.24.0",
    "path": "^0.12.7",
    "typescript": "^3.8.3",
    "xmldom": "^0.3.0",
    "xpath": "0.0.27",
    "xpath-ts": "^1.3.13"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "chai": "^4.2.0",
    "mocha": "^10.2.0",
    "prettier": "^2.0.4",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "files": ["lib/**/*"]
}